<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VisionBuddy"
             x:Class="VisionBuddy.MainPage">

    <StackLayout x:Name="stackLayoutMain" Orientation="Vertical">

        <StackLayout x:Name="stackLayout" VerticalOptions="FillAndExpand" Orientation="Vertical">

            <Label x:Name="lbWelcome" Text="Welcome to Xamarin Forms! This is a Test!!!!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

            <ListView x:Name="lvDisplay" />

        </StackLayout>

        <StackLayout x:Name="stackLayoutBottom" HorizontalOptions="FillAndExpand" Orientation="Horizontal">

            <Button x:Name="btLoadSentSMS" Text="Load Sent" HorizontalOptions="FillAndExpand"
                local:AccessibilityEffect.AccessibilityLabel="Load Sent SMS"/>
            <Button x:Name="btLoadInboxSMS" Text="Load Inbox" HorizontalOptions="FillAndExpand"
                local:AccessibilityEffect.AccessibilityLabel="Load Inbox SMS"/>

        </StackLayout>
    </StackLayout>
</ContentPage>